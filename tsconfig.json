{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "incremental": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["src/", ".d.ts", "**/*"],
  "exclude": ["node_modules, build/**/*"]
}
